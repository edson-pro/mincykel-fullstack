{
  "name": "resto-portal-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' --files src/index.ts",
    "build": "tsc && copyfiles -u 1 src/**/*.ttf dist/",
    "migration:generate": "sh -c 'npx typeorm-ts-node-commonjs migration:generate ./src/database/migrations/$0 -d ./src/data-source.ts'",
    "migration:create": "npx typeorm-ts-node-commonjs migration:create -d ./src/data-source.ts",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/data-source.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs  migration:revert -d ./src/data-source.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.810.0",
    "@aws-sdk/s3-request-presigner": "^3.810.0",
    "@react-pdf/renderer": "^4.3.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.5.0",
    "fs-extra": "^11.2.0",
    "google-auth-library": "^9.15.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.1.0",
    "nodemailer": "^6.10.0",
    "otp-generator": "^4.0.1",
    "paypack-js": "^0.2.1",
    "pg": "^8.13.1",
    "react-aria-components": "^1.4.1",
    "reflect-metadata": "^0.2.2",
    "slug": "^10.0.0",
    "stripe": "^18.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "winston": "^3.17.0",
    "winston-dashboard": "^1.0.12",
    "xlsx": "^0.18.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
